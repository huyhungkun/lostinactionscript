package com.flashdynamix.motion.effects {	import flash.display.BitmapData;	import flash.geom.*;	import com.flashdynamix.motion.effects.IEffect;		/**	 * @author shanem	 */	public class MergeEffect implements IEffect {		public var sourceBmd : BitmapData;		public var destPoint : Point;		public var sourceRect : Rectangle;		public var redMultiplier : uint;		public var greenMultiplier : uint;		public var blueMultiplier : uint;		public var alphaMultiplier : uint;		function MergeEffect(sourceBmd : BitmapData, redMultiplier : uint = 0, greenMultiplier : uint = 0, blueMultiplier : uint = 0, alphaMultiplier : uint = 0, destPoint : Point = null, sourceRect : Rectangle = null) {			this.sourceBmd = sourceBmd;						this.redMultiplier = redMultiplier;			this.greenMultiplier = greenMultiplier;			this.blueMultiplier = blueMultiplier;			this.alphaMultiplier = alphaMultiplier;						this.destPoint = (destPoint == null) ? new Point() : destPoint;			this.sourceRect = (sourceRect == null) ? sourceBmd.rect : sourceRect;		}		public function render(bmd : BitmapData) : void {			bmd.merge(sourceBmd, sourceRect, destPoint, redMultiplier, greenMultiplier, blueMultiplier, alphaMultiplier);		}	}}