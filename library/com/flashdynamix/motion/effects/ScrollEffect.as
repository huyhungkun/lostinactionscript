package com.flashdynamix.motion.effects {	import flash.display.BitmapData;	import com.flashdynamix.motion.effects.IEffect;		/**	 * @author shanem	 */	public class ScrollEffect implements IEffect {		public var xDir : Number;		public var yDir : Number;		function ScrollEffect(xDir : Number = 0, yDir : Number = 0) {			this.xDir = xDir;			this.yDir = yDir;		}		public function render(bmd : BitmapData) : void {			bmd.scroll(xDir, yDir);		}	}}