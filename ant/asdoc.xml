<project name="AS Documentation Builder" default="main" >
    
	<!-- Defines all values for the asdoc compiler -->
	<property file="asdoc_example.prefs" />
	
	<target name="main" depends="createDirs, createDocs" />
	
	<target name="createDirs" >
	   <delete dir="${outputDir}" />
	   <mkdir  dir="${outputDir}" />
	</target>
	
	<target name="createDocs" >
		<exec executable="${asdoc}" failonerror="false" >
			<arg line="-doc-sources ${src}" />
			<arg line="-main-title '${mainTitle}'" />
			<arg line="-window-title '${windowTitle}'" />
			<arg line="-output ${outputDir}" />
		</exec>
	</target>

</project>

