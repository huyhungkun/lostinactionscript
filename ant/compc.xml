<project name="Compile to SWC" default="main" >
	
	<!-- Defines all values for the compc compiler -->
	<property file="compc_example.prefs" />
	
	<target name="main" depends="createSwc" />
	
	<target name="createSwc">
		<exec executable="${compc}" failonerror="false" >
			<arg value="-include-sources=${src}" />
			<arg value="-output=${outputFile}" />
		</exec>
	</target>
	
</project>