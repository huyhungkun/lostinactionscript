package com.flashdynamix.motion.effects {	import flash.display.*;	import flash.geom.*;	import com.flashdynamix.motion.effects.IEffect;		/**	 * @author shanem	 */	public class DrawEffect implements IEffect {		public var source : IBitmapDrawable;		public var matrix : Matrix;		public var colorTransform : ColorTransform;		public var blendMode : String = BlendMode.NORMAL;		public var clipRect : Rectangle;		public var smoothing : Boolean = false;		public function DrawEffect(source : IBitmapDrawable, mtx : Matrix = null, cr : Rectangle = null, ct : ColorTransform = null, bm : String = "normal", smoothing : Boolean = false) {			this.source = source;			this.matrix = (mtx == null) ? new Matrix() : mtx;			this.colorTransform = (ct == null) ? new ColorTransform() : ct;			this.blendMode = bm;			this.clipRect = cr;			this.smoothing = smoothing;		}		public function render(bmd : BitmapData) : void {			bmd.draw(source, matrix, colorTransform, blendMode, clipRect, smoothing);		}	}}