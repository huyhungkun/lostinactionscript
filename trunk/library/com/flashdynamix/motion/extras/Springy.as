package com.flashdynamix.motion.extras {	import flash.display.Sprite;	import flash.events.Event;		/**	 * @author shanem	 */	public class Springy {		private static const frame : Sprite = new Sprite();		public var item : Object;		public var name : String;		public var friction : Number;		public var spring : Number;		public var target : Number = 0;		private var vel : Number = 0;		public function Springy(item : Object, name : String, spring : Number = 0.3, friction : Number = 0.6) : void {			this.item = item;			this.name = name;			this.spring = spring;			this.friction = friction;						start();		}				public function start() : void {			frame.addEventListener(Event.ENTER_FRAME, draw, false, 0, true);		}		public function stop() : void {			frame.removeEventListener(Event.ENTER_FRAME, draw);		}		private function draw(e : Event) : void {			var ax : Number = (target - current) * spring;			vel += ax;			vel *= friction;						current += vel;		}		private function set current(num : Number) : void {			item[name] = num;		}		private function get current() : Number {			return item[name];		}	}}