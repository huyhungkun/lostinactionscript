package com.flashdynamix.motion.extras {	/**	 * @author shanem	 */	public class ObjectPool {		public var list : Array = [];		public var Item : Class;		public var minSize : int;		public var size : int = 0;		private var length : int = 0;		public function ObjectPool(Item : Class, minSize : int = 50) {			this.Item = Item;			this.minSize = minSize;						length = size = minSize;						for(var i : int = 0;i < minSize; i++) list[i] = new Item();		}		public function checkOut() : * {			if(length == 0) {				size++;				return new Item();			}						return list[--length];		}		public function checkIn(item : *) : void {			list[length++] = item;		}		public function dispose() : void {			Item = null;			list = null;		}	}}