package com.flashdynamix.motion.vectors {	import flash.display.Graphics;	import flash.geom.Point;	import com.flashdynamix.motion.vectors.Line;		/**	 * @author shanem	 */	public class CurveLine extends Line implements IVector {		public var through : Boolean = false;		public function CurveLine(through : Boolean = false, ...pts : Array) {			super(pts);			this.through = through;			this.pts = pts;		}		override public function draw(vector : Graphics) : void {			if(pts.length <= 2) return;						var pt : Point = index(0);			var cPt : Point;						vector.lineStyle.apply(null, style);			vector.moveTo(pt.x, pt.y);						if(through) {				cPt = index(2).subtract(pt);				cPt.x /= 4;				cPt.y /= 4;				cPt = index(1).subtract(cPt);								pt = index(1);								vector.curveTo(cPt.x, cPt.y, pt.x, pt.y);								for(var i : int = 1;i < pts.length - 1; i++) {					cPt = index(i).add(index(i).subtract(cPt));					pt = index(i + 1);										vector.curveTo(cPt.x, cPt.y, pt.x, pt.y);				}			} else {				for(var j : int = 1;j < pts.length - 1; j += 2) {					cPt = index(j);					pt = index(j + 1);										vector.curveTo(cPt.x, cPt.y, pt.x, pt.y);				}			}		}	}}