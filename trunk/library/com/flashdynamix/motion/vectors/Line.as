package com.flashdynamix.motion.vectors {	import flash.display.Graphics;	import flash.geom.Point;		/**	 * @author shanem	 */	public class Line implements IVector {		public var style : Array = [1, 0xFFFFFF];		protected var pts : Array;		public function Line(...pts : Array) {			this.pts = pts;		}		public function index(idx : int) : Point {			return pts[idx];		}		public function addAt(idx : int, pt : Point) : void {			pts.splice(idx, 0, pt);		}		public function push(pt : Point) : void {			pts.push(pt);		}		public function unshift(pt : Point) : void {			pts.unshift(pt);		}		public function remove(pt : Point) : void {			var index : int = pts.indexOf(pt);			if(index != -1) removeAt(index, 1);		}		public function removeAt(idx : int, len : int = 1) : void {			pts.splice(idx, len);		}		public function get length() : int {			return pts.length;		}		public function draw(vector : Graphics) : void {			vector.lineStyle.apply(null, style);						var pt : Point = pts[int(0)];			vector.moveTo(pt.x, pt.y);			for(var i : int = 1;i < pts.length; i++) {				pt = pts[i];				vector.lineTo(pt.x, pt.y);			}		}	}}