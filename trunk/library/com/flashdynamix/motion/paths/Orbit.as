package com.flashdynamix.motion.paths {	/**	 * @author shanem	 */	public class Orbit {		public var item : Object;		private var _radiusX : Number;		private var _radiusY : Number;		private var _rotationX : Number = 0;		private var _rotationY : Number = 0;		private var _centerX : Number = 0;		private var _centerY : Number = 0;		public function Orbit(item : Object, radiusX : Number, radiusY : Number, centerX : Number, centerY : Number) {			this.item = item;			this.radiusX = radiusX;			this.radiusY = radiusY;			this.centerX = centerX;			this.centerY = centerY;			update();		}				public function set centerX(x : Number) : void {			_centerX = x;			update();		}		public function get centerX() : Number {			return _centerX;		}		public function set centerY(y : Number) : void {			_centerY = y;			update();		}		public function get centerY() : Number {			return _centerY;		}		public function set radiusY(radius : Number) : void {			_radiusY = radius;			update();		}		public function get radiusY() : Number {			return _radiusY;		}		public function set radiusX(radius : Number) : void {			_radiusX = radius;			update();		}		public function get radiusX() : Number {			return _radiusX;		}		public function set rotationX(rot : Number) : void {			_rotationX = rot;			update();		}		public function get rotationX() : Number {			return _rotationX;		}		public function set rotationY(rot : Number) : void {			_rotationY = rot;			update();		}		public function get rotationY() : Number {			return _rotationY;		}		private function update() : void {			item.x = centerX + Math.cos(rotationX) * radiusX;			item.y = centerY + Math.sin(rotationY) * radiusY;		}	}}