textMenu = new ContextMenu();			cm.hideBuiltInItems();			this.contextMenu = cm;						request.url = root.loaderInfo.parameters.url;			addChild(txtBx);			onResize();						removeEvent(this, Event.ADDED_TO_STAGE, added);			addEvent(stage, Event.RESIZE, onResize);						if(request.url) {				loader.visible = false;				addChild(loader);				addEvent(this, Event.ENTER_FRAME, draw);				loader.load(request, new LoaderContext(false, ApplicationDomain.currentDomain));			} else {				onError();			}		}		private function draw(e : Event) : void {			if(tPer == 0) return;						cPer += (tPer - cPer) / 4;			txtBx.text = Math.round(cPer * 100) + "%";			onResize();		}		private function onResize(e : Event = null) : void {			txtBx.x = (stage.stageWidth - txtBx.width) / 2;			txtBx.y = (stage.stageHeight - txtBx.height) / 2;						playPB.x = (stage.stageWidth) / 2;			playPB.y = (stage.stageHeight) / 2;		}		private function onError(e : IOErrorEvent = null) : void {			txtBx.text = "Could not find Swf.";			onResize();		}		private function onProgress(e : ProgressEvent) : void {			tPer = e.bytesLoaded / e.bytesTotal;		}		private function onComplete(e : Event) : void {			setTimeout(doCapture, 1 * 1000);		}		private function doCapture() : void {			removeEvent(this, Event.ENTER_FRAME, draw);						playPB.visible = true;						removeChild(txtBx);						var stageWidth : int = (stage.stageWidth > 0) ? stage.stageWidth : 1000;			stageWidth = (stageWidth > 2000) ? 2000 : stageWidth;			var stageHeight : int = (stage.stageHeight > 0) ? stage.stageHeight : 1000;			stageHeight = (stageHeight > 2000) ? 2000 : stageHeight;						var bmd : BitmapData = new BitmapData(stageWidth, stageHeight, false, 0x00000000);			bmp = new Bitmap(bmd);						bmd.draw(loader, null, new ColorTransform(1, 1, 1, 0.9));			cm.matrix = DESATURATE;			bmd.applyFilter(bmd, bmd.rect, new Point(), cm);						addEvent(stage, MouseEvent.MOUSE_DOWN, click);						removeChild(loader);			addChild(bmp);			addChild(playPB);						this.buttonMode = true;			loader.visible = true;		}		private function click(e : MouseEvent) : void {			removeChild(playPB);			removeChild(bmp);			addChild(loader);			this.buttonMode = false;						removeEvent(stage, Event.RESIZE, onResize);			removeEvent(stage, MouseEvent.MOUSE_DOWN, click);		}		private function addEvent(item : EventDispatcher, type : String, listener : Function) : void {			item.addEventListener(type, listener, false, 0, true);		}		private function removeEvent(item : EventDispatcher, type : String, listener : Function) : void {			item.removeEventListener(type, listener);		}	}}