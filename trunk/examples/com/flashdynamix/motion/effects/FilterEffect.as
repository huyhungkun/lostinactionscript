package com.flashdynamix.motion.effects {	import flash.display.BitmapData;	import flash.filters.BitmapFilter;	import flash.geom.*;	import flash.utils.*;	/**	 * @author FlashDynamix	 * Applies a Filter and an alpha decay to the Bitmap layer	 */	public class FilterEffect extends Proxy implements IEffect {		public var filter : BitmapFilter;		public var pt : Point = new Point();		public function FilterEffect(filter : BitmapFilter) {			this.filter = filter;		}		public function render(bmd : BitmapData) : void {			bmd.applyFilter(bmd, bmd.rect, pt, filter);		}		override flash_proxy function setProperty(name : *, value : *) : void {			filter[name] = value;		}		override flash_proxy function getProperty(name : *) : * {			return filter[name];		}	}}