package com.flashdynamix.motion.extras {	import flash.display.BitmapData;	import flash.display.Graphics;	import flash.display.Sprite;	import flash.geom.Matrix;		/**	 * @author shanem	 */	public class BitmapTiler extends Sprite {		public var source : BitmapData;		private var _offsetX : Number = 0;		private var _offsetY : Number = 0;		private var mtx : Matrix = new Matrix();		public var tileWidth : int;		public var tileHeight : int;		public function BitmapTiler(source : BitmapData, tileWidth : int = 0, tileHeight : int = 0) {			this.tileWidth = tileWidth;			this.tileHeight = tileHeight;						this.source = source;			refresh();		}		public function set offsetX(num : Number) : void {			_offsetX = num;			refresh();		}		public function get offsetX() : Number {			return _offsetX;		}		public function set offsetY(num : Number) : void {			_offsetY = num;			refresh();		}		public function get offsetY() : Number {			return _offsetY;		}		private function refresh() : void {			mtx.tx = _offsetX;			mtx.ty = _offsetY;						var vec : Graphics = this.graphics;			vec.clear();			vec.beginBitmapFill(source, mtx, true, false);			vec.drawRect(0, 0, tileWidth, tileHeight);			vec.endFill();		}	}}