package com.flashdynamix.motion.effects {	import flash.display.BitmapData;	import flash.geom.*;		/**	 * @author shanem	 */	public class ThresholdEffect implements IEffect {		public var operation : String = "<=";		public var threshold : uint = 0x50FFFFFF;		public var replaceColor : uint = 0x00FFFFFF;		public var maskColor : uint = 0xFFFFFFFF;		public var copySource : Boolean = false;		public var pt : Point = new Point();		public function ThresholdEffect(operation : String = "<=", threshold : uint = 0x50FFFFFF, replaceColor : uint = 0x00FFFFFF, maskColor : uint = 0xFFFFFFFF, copySource : Boolean = false) {			this.operation = operation;			this.threshold = threshold;			this.replaceColor = replaceColor;			this.maskColor = maskColor;			this.copySource = copySource;		}		public function render(bmd : BitmapData) : void {			bmd.threshold(bmd, bmd.rect, pt, operation, threshold, replaceColor, maskColor, copySource);		}	}}